<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>Blog</title>
  </head>
  <body>
    <div class="container">
      <!--creating the title-->
      <h1 class="mb-4">Blog Articles</h1>
      <a href="/articles/new" class="btn btn-success"> New Article</a>

      <!--Creating the Article Cards-->
      <% article.forEach(article =>{ %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title%></h4>
          <div class="card-subtitie text-muted mb-2">
            <%= article.dateCreated.toLocaleDateString()%>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="articles/<%= article.slug %>" class="btn btn-primary"
            >Read This Article
          </a>
          <a href="articles/edit/<%= article.id %>" class="btn btn-info"
            >Edit this Article!
          </a>

          <!-- DELETE FORM-->
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger">
              DELETE ARTICLE!
            </button>
          </form>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
